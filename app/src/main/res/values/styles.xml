<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimaryColor</item>
        <item name="colorPrimaryDark">?themePrimaryColor</item>
        <item name="colorAccent">?themePrimaryColor</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="themePrimaryColor">@color/lightThemePrimaryColor</item>
        <item name="themeStatusBarColor">@color/lightThemeStatusBarColor</item>
        <item name="themeScreenBackgroundColor">@color/lightThemeScreenBackgroundColor</item>
        <item name="themeTextColor">@color/lightThemeTextColor</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="themePrimaryColor">@color/darkThemePrimaryColor</item>
        <item name="themeStatusBarColor">@color/darkThemeStatusBarColor</item>
        <item name="themeScreenBackgroundColor">@color/darkThemeScreenBackgroundColor</item>
        <item name="themeTextColor">@color/darkThemeTextColor</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="TransparentDialogStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:fontFamily">@font/font_poppins_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="ContentTextViewStyle">
        <item name="android:fontFamily">@font/font_poppins_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="ButtonTextViewStyle">
        <item name="android:fontFamily">@font/font_poppins_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>